<div class="background-radial-grey-darkergrey height-100 col-md-12">

  <div class="background-lighter-grey col-md-4 col-md-offset-4 buffer-padding-50 buffer-margin-150 text-center box-shadow-radial">
    <h1 class="buffer-margin-40 no-margin-top font-size-400"><span class="text-bold text-uppercase">NW</span> Transfer</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: :email, class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.password_field :password, placeholder: :password, class: "form-control" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> Remember me
          <% end %>
        </div>
      <% end -%>
    
      <div class="actions">
        <%= f.submit "Login", class: "btn btn-dark-grey no-border-radius no-border buffer-padding-10 buffer-padding-50-horizontal" %>
      </div>
    <% end %>
    
    <div class="link-light-grey small buffer-margin-50 no-margin-bottom">
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>

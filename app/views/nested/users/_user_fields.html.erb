<div class="container-fluid form-horizontal">
    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :id, I18n.t(:user).titleize, class: 'form-label control-label col-md-2' %>
        <div class="col-md-10 no-padding">
            <% if f.object.persisted? %>
                <%= f.collection_select :id, users, :id, :name, { include_blank: true }, { class: 'form-control no-border-radius', disabled: true } %>
            <% else %>
                <%= f.collection_select :id, users, :id, :name, { include_blank: true }, { class: 'form-control no-border-radius' } %>
            <% end %>
        </div>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>
        <%= f.label :roles, class: 'form-label control-label col-md-2' %>
        <div class="col-md-10">
            <%= role_fields(f, target_resource.roles) %>
        </div>
    <% end %>

    <%= render 'shared/nested/remove_button', f: f %>
    
</div>

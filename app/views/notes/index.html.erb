<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <h1 class="no-margin">Notifications</h1>
    </div>

    <div class="col-md-2 text-center">
      <%= link_to new_note_path(controller_name, params[:id] || params[:resource_id]) do %>
        <%= fa_icon "plus", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Type</th>
      <th>Text</th>
      <th>Author</th>
      <th>Create At</th>
      <th>Info</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @notes %>
  </tbody>
</table>
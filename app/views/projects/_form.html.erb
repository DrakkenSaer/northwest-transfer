<%= form_for @project do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :title %>
        <%= f.text_field :title %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :description %>
        <%= f.text_area :description %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :address %>
        <%= f.text_field :address %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :city %>
        <%= f.text_field :city %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :state %>
        <%= f.select :state, options_for_select(['1','2','3']) %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :postal, I18n.t(:postal_code).capitalize %>
        <%= f.text_field :postal %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :country %>
        <%= f.select :country, options_for_select(['1','2','3']) %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :start_date %>
        <%= f.datetime_local_field :start_date %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :estimated_completion_date %>
        <%= f.datetime_local_field :estimated_completion_date %>
    <% end %>

    <%= content_tag :div, class: 'form-group' do %>    
        <%= f.label :notes, I18n.t(:project_notes).capitalize %>
        <%= f.text_area :notes %>
    <% end %>

    <%= f.fields_for :tasks do |builder| %>
        <%= render 'task_fields', f: builder %>
    <% end %>

    <%= link_to_add_fields 'Add Task', f, :tasks %>

    <p><%= f.submit %></p>
<% end %>
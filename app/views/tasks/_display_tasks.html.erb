<%if object.class == Task %>
<tr>
  <td><%= object.name %></td>
  <td><%= object.description %></td>
  <td><%= object.aasm.current_state %></td>
  <td><%= link_to ("#{object}_path(id: #{object}") do %>
        <%= fa_icon "info-circle", class: "btn btn-default" %>
        <% end %></td>
  <td><%= link_to ("edit_#{object}_path(id: #{object})") do %>
        <%= fa_icon "pencil", class:"btn btn-success" %>
        <% end %></td>
  <td><%= link_to "#{object}_path(id: #{object}), method: :delete, data: { confirm: 'Are you sure?' }" do %>
    <%= fa_icon "trash", class:"btn btn-danger" %>
  <% end %></td>
</tr>
<% elsif object.class == User %>
  <tr>
    <td><%= fa_icon "user" %></td>
    <td><%= object.first_name %></td>
    <td><%= object.last_name %></td>
    <td><%= object.phone %></td>
    <td><%= object.email  %></td>
    <td><%= link_to ("edit_#{object}_path(id: #{object})") do %>
          <%= fa_icon "pencil", class:"btn btn-success" %>
          <% end %></td>
    <td><%= link_to "#{object}_path(id: #{object}), method: :delete, data: { confirm: 'Are you sure?' }" do %>
      <%= fa_icon "trash", class:"btn btn-danger" %>
      <% end %></td>
  </tr>
<% elsif object.class == Note %>
  <tr>
    <td><%= object.loggable_type %></td>
    <td><%= object.user.first_name %> <%= object.user.last_name %>, <%= object.created_at %> </td>
  </tr>
<% elsif object.class == Document %>
  <tr>
    <td><%= object.title %></td>
    <td><%= object.created_at %> </td>
    <td><%= link_to ("#{object}_path(id: #{object}") do %>
          <%= fa_icon "info-circle", class: "btn btn-default" %>
          <% end %></td>
    <td><%= link_to ("edit_#{object}_path(id: #{object})") do %>
          <%= fa_icon "pencil", class:"btn btn-success" %>
          <% end %></td>
    <td><%= link_to "#{object}_path(id: #{object}), method: :delete, data: { confirm: 'Are you sure?' }" do %>
      <%= fa_icon "trash", class:"btn btn-danger" %>
      <% end %></td>
  </tr>
<% end %>

<%= form_for([@task.project, @task]) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :resource_state, :status %>
    <%= f.select :resource_state, filter_states(Task, [:pending]), { include_blank: true } %>
  </div>
  
  <%= f.fields_for :notes do |builder| %>
    <%= render 'task_fields', f: builder %>
  <% end %>

  <%= link_to_add_fields 'Add Note', f, :notes %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

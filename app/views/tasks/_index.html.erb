<div class="row">
  <div class="col-md-10">
    <p class="text-align-left font-size-200 text-bold" >Tasks</p>
  </div>

    <%= link_to new_task_path("projects", @project)  do %>
    <%= fa_icon "plus", class: "btn btn-info buffer-margin-10" %>
    <% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <%= render "shared/display_models", object: task %>
    <% end %>
  </tbody>
</table>

<div class="container-fluid form-horizontal">
    <div class="form-group">
        <%= f.label :name, class: "form-label control-label col-md-2" %>
        <div class="col-md-10 no-padding">
            <%= f.text_field :name, class: "form-control no-border-radius" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :description, class: "form-label control-label col-md-2" %>
        <div class="col-md-10 no-padding">
            <%= f.text_field :description, class: "form-control no-border-radius" %>
        </div>
    </div>

    <% if current_user.admin? %>
    <div class="form-group">
        <%= f.label :resource_state, I18n.t(:status).titleize, class: 'form-label control-label col-md-2'%>
        <div class="col-md-10 no-padding">
            <%= f.select :resource_state, resource_states(Task), { include_blank: true }, class: "form-control no-border-radius" %>
        </div>
    </div>
    <% end %>

    <%= render 'shared/nested/remove_button', f: f %>
</div>

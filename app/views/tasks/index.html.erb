<% title('Tasks') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <h1 class="no-margin">Tasks</h1>
    </div>

    <div class="col-md-2 text-center">
      <%= link_to (params[:id] || params[:resource_id]).present? ? new_nested_task_path(params[:resource_controller] || controller_name, params[:id] || params[:resource_id]) : new_task_path do %>
        <%= fa_icon "plus", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <%= render @tasks %>
  </tbody>
</table>

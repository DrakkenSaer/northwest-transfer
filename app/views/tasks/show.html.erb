<%= content_tag :h1, @task.name %>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.resource_state %>
</p>

<p>
  <strong>Notes</strong>
  <ol>
    <% @task.notes.each do |note| %>
    <li>
      <%= render 'notes/note_attributes', note: note %>
    </li>
    <% end %>
  </ol>
</p>

<div class="container">
  <%= render "shared/resource_state_actions", 
              object: @task, 
              object_class: "btn btn-default col-md-offset-4 col-md-4 buffer-margin-10" %>
</div>

<%= link_to 'Edit', edit_task_path(id: @task) %> |
<%= link_to 'Back', @resource %>
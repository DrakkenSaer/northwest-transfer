<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <h1 class="no-margin">Users</h1>
    </div>
  
    <%= content_tag :div, class: "col-md-2 text-center" do %>
      <%= link_to new_user_registration_path do %>
        <%= fa_icon "plus", class: "btn btn-info" %>
      <% end %>
    <% end if current_user.admin? %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <%= content_tag :th, 'Role'  %>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
      <% @users.each do |user| %>
        <%= render user, user_role: user.find_roles(@project.class.name, @project.id).map(&:name) %>
      <% end %>
  </tbody>
</table>
